{
  "Class": {
    "prefix": "class",
    "body": ["public class ${1:ClassName}", "{", "\t$0", "}"],
    "description": "Create a new class"
  },
  "Record": {
    "prefix": "record",
    "body": ["public record ${1:MyRecord}(${2:string} ${3:PropertyName});"],
    "description": "Creates a C# record declaration."
  },
  "Interface": {
    "prefix": "interface",
    "body": ["public interface ${1:IInterfaceName}", "{", "\t$0", "}"],
    "description": "Create a new interface"
  },
  "Method": {
    "prefix": "method",
    "body": ["${1:public} ${2:void} ${3:MethodName}($4)", "{", "\t$0", "}"],
    "description": "Create a method"
  },
  "Async Method": {
    "prefix": "method_async",
    "body": [
      "${1:public} async Task${2:<${3:T}>} ${4:MethodName}($5)",
      "{",
      "\t$0",
      "}"
    ],
    "description": "Create an async method"
  },
  "Interface Method": {
    "prefix": "imethod",
    "body": ["${1:void} ${2:MethodName}($3);$0"],
    "description": "Create an interface method"
  },
  "Interface Async Method": {
    "prefix": "imethod_async",
    "body": [
      "Task${1:<${2:T}>} ${3:MethodName}Async($4, CancellationToken cancellationToken = default);$0"
    ],
    "description": "Create an interface async method"
  },
  "Constructor": {
    "prefix": "ctor",
    "body": ["public ${1:ClassName}($2)", "{", "\t$0", "}"],
    "description": "Create a constructor"
  },
  "Property": {
    "prefix": "prop",
    "body": ["public ${1:int} ${2:PropertyName} { get; set; }$0"],
    "description": "Create an auto-property"
  },
  "Property with backing field": {
    "prefix": "propfull",
    "body": [
      "private ${1:int} ${2:_fieldName};",
      "public ${1:int} ${3:PropertyName}",
      "{",
      "\t\tget { return ${2:_fieldName}; }",
      "\t\tset { ${2:_fieldName} = value; }",
      "}$0"
    ],
    "description": "Create a property with backing field"
  },
  "Read-only Property": {
    "prefix": "propread",
    "body": ["public ${1:int} ${2:PropertyName} { get; }$0"],
    "description": "Create a read-only auto-property"
  },
  "Property with private setter": {
    "prefix": "propprivate",
    "body": ["public ${1:int} ${2:PropertyName} { get; private set; }$0"],
    "description": "Create a property with private setter"
  },
  "For Loop": {
    "prefix": "for",
    "body": [
      "for (int ${1:i} = 0; ${1:i} < ${2:length}; ${1:i}++)",
      "{",
      "\t\t$0",
      "}"
    ],
    "description": "Create a for loop"
  },
  "Foreach Loop": {
    "prefix": "foreach",
    "body": [
      "foreach (${1:var} ${2:item} in ${3:collection})",
      "{",
      "\t$0",
      "}"
    ],
    "description": "Create a foreach loop"
  },
  "While Loop": {
    "prefix": "while",
    "body": ["while (${1:condition})", "{", "\t$0", "}"],
    "description": "Create a while loop"
  },
  "Do While Loop": {
    "prefix": "dowhile",
    "body": ["do", "{", "\t\t$0", "} while (${1:condition});"],
    "description": "Create a do-while loop"
  },
  "If Statement": {
    "prefix": "if",
    "body": ["if (${1:condition})", "{", "\t\t\t$0", "}"],
    "description": "Create an if statement"
  },
  "Else-If Statement": {
    "prefix": "elseif",
    "body": [
      "if (${1:condition})",
      "{",
      "\t\t\t$3",
      "}",
      "else if (${2})",
      "{",
      "\t\t\t$4",
      "}",
      "else",
      "{",
      "\t\t\t$0",
      "}"
    ],
    "description": "Create an else-if statement"
  },
  "If-Else Statement": {
    "prefix": "ifelse",
    "body": [
      "if (${1:condition})",
      "{",
      "\t\t\t$2",
      "}",
      "else",
      "{",
      "\t\t\t$0",
      "}"
    ],
    "description": "Create an if-else statement"
  },
  "Switch Statement": {
    "prefix": "switch",
    "body": [
      "switch (${1:expression})",
      "{",
      "\t\t\tcase ${2:value}:",
      "\t\t\t\t$3",
      "\t\t\t\tbreak;",
      "\t\t\tdefault:",
      "\t\t\t\t$0",
      "\t\t\t\tbreak;",
      "}"
    ],
    "description": "Create a switch statement"
  },
  "Try-Catch": {
    "prefix": "try",
    "body": [
      "try",
      "{",
      "\t\t\t$1",
      "}",
      "catch (${2:Exception} ${3:ex})",
      "{",
      "\t\t\t$0",
      "}"
    ],
    "description": "Create a try-catch block"
  },
  "Try-Catch-Finally": {
    "prefix": "tryf",
    "body": [
      "try",
      "{",
      "\t\t\t$1",
      "}",
      "catch (${2:Exception} ${3:ex})",
      "{",
      "\t\t\t$4",
      "}",
      "finally",
      "{",
      "\t\t\t$0",
      "}"
    ],
    "description": "Create a try-catch-finally block"
  },
  "Using Statement": {
    "prefix": "using",
    "body": [
      "using (${1:var} ${2:resource} = ${3:new Resource()})",
      "{",
      "\t\t$0",
      "}"
    ],
    "description": "Create a using statement"
  },
  "Namespace": {
    "prefix": "namespace",
    "body": ["namespace ${1:MyNamespace}", "{", "\t$0", "}"],
    "description": "Create a namespace"
  },
  "Enum": {
    "prefix": "enum",
    "body": [
      "public enum ${1:EnumName}",
      "{",
      "\t${2:Value1},",
      "\t${3:Value2}$0",
      "}"
    ],
    "description": "Create an enum"
  },
  "Struct": {
    "prefix": "struct",
    "body": ["public struct ${1:StructName}", "{", "\t$0", "}"],
    "description": "Create a struct"
  },
  "Static Class": {
    "prefix": "static",
    "body": ["public static class ${1:ClassName}", "{", "\t$0", "}"],
    "description": "Create a static class"
  },
  "Abstract Class": {
    "prefix": "abstract",
    "body": ["public abstract class ${1:ClassName}", "{", "\t$0", "}"],
    "description": "Create an abstract class"
  },
  "Console WriteLine": {
    "prefix": "cw",
    "body": ["Console.WriteLine(${1:\"Hello, World!\"});$0"],
    "description": "Console.WriteLine"
  },
  "Throw Exception": {
    "prefix": "throw",
    "body": ["throw new ${1:Exception}(${2:\"message\"});$0"],
    "description": "Throw an exception"
  },
  "Ternary Operator": {
    "prefix": "ternary",
    "body": ["${1:condition} ? ${2:trueValue} : ${3:falseValue}$0"],
    "description": "Ternary conditional operator"
  }
}
